# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env.production and fill in actual values

# Environment
NODE_ENV=production
PORT=5000

# Database (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR_PROJECT].supabase.co
SUPABASE_ANON_KEY=[YOUR_SUPABASE_ANON_KEY]
SUPABASE_SERVICE_ROLE_KEY=[YOUR_SUPABASE_SERVICE_ROLE_KEY]

# Security & Authentication
JWT_SECRET=[GENERATE_256_BIT_SECRET_KEY]
PAYMENT_WEBHOOK_SECRET=[GENERATE_SECURE_WEBHOOK_SECRET]

# External Payment Services
STRIPE_SECRET_KEY=sk_live_[YOUR_LIVE_STRIPE_SECRET]
STRIPE_WEBHOOK_SECRET=whsec_[YOUR_STRIPE_WEBHOOK_SECRET]

# CORS & Frontend
FRONTEND_URL=https://your-app.vercel.app
ALLOWED_ORIGINS=https://your-app.vercel.app,https://www.your-domain.com

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=[YOUR_SENTRY_DSN]
NEW_RELIC_LICENSE_KEY=[YOUR_NEW_RELIC_KEY]

# Optional: Email Service (SendGrid, etc.)
EMAIL_API_KEY=[YOUR_EMAIL_API_KEY]
FROM_EMAIL=noreply@your-domain.com